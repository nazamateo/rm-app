<div class="overflow-y-scroll h-1/2 w-1/4 bg-green-900 sm:rounded-lg text-white">
  <% if current_user.admin? %>
    <% if @job.remark.last == nil %>
      <%= link_to new_admin_job_remark_path(@job) do %>
        <div class='flex flex-start'>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
          </svg>
          Add Remarks
        </div>
      <%end%>
    <%else%>
      <% if @job.remark.last.status == "Done" || @job.remark.last.status == "Cancelled"%>
      <%else%>
        <%= link_to new_admin_job_remark_path(@job) do %>
          <div class='flex flex-start'>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
            </svg>
            Add Remarks
          </div>
        <%end%>
      <%end%>
    <%end%>
  <%end%>
  <h1 class='font-bold'>Updates</h1>
  <% @job.remark.order(created_at: :desc).each do |entry| %>
    <h3 class="flex items-center justify-center font-semi"><%=entry.created_at.localtime.strftime("%b %d, '%y")%></h3>
    <p>Status: <%=entry.status%></p>
    <p>Remarks: <%=entry.remarks%></p>
  <%end%>
</div>
