<%= search_form_for @q, url: admin_jobs_path do |f| %>
  <%= f.label :user_email %>
  <%= f.select :user_email_eq, options_from_collection_for_select(User.all, :email, :email, @q.user_email_eq), { :include_blank => true } %>
  <%= f.label :user_service %>
  <%= f.search_field :user_service_cont %>
  <%= f.label :user_unit %>
  <%= f.search_field :user_unit_cont %>
  <%= f.label :nature_of_request %>
  <%= f.search_field :nature_of_request_cont %>
  <%= f.label :assessor_id, 'Assesed by' %>
  <%= f.select :assessor_id_eq, options_from_collection_for_select(Personnel.all.where(maintenance_unit: 'Engineering'), :id, :surname, @q.assessor_id_eq), { :include_blank => true } %>
  <%= f.submit %>
<% end %>
