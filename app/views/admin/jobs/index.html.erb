<div class="overflow-x-auto flex items-center justify-center w-11/12 sm:rounded-lg">
  <table class="block w-full text-sm text-left text-gray-500 dark:text-gray-400">
    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
      <tr>
        <th scope="col" class="py-3 px-6">
          Job Order Number
        </th>
        <th scope="col" class="py-3 px-6">
          Email
        </th>
        <th scope="col" class="py-3 px-6">
          Service
        </th>
        <th scope="col" class="py-3 px-6">
          Unit
        </th>
        <th scope="col" class="py-3 px-6">
          Nature of request
        </th>
        <th scope="col" class="py-3 px-6">
          Note to engineering
        </th>
        <th scope="col" class="py-3 px-6">
          Maintenance Unit
        </th>
        <th scope="col" class="py-3 px-6">
          Assessed by
        </th>
        <th scope="col" class="py-3 px-6">
          Assigned to
        </th>
        <th scope="col" class="py-3 px-6">
          Status
        </th>
        <th scope="col" class="py-3 px-6">
          Remarks
        </th>
        <th scope="col" class="py-3 px-6">
          Created at
        </th>
        <th scope="col" class="py-3 px-6">
          Closed at
        </th>
        <th scope="col" class="py-3 px-6">
          View
        </th>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
          <th scope="row" class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap dark:text-white">
            <%=job.id%>
          </th>
          <td class="py-4 px-6">
            <%=job.user.email%>
          </td>
          <td class="py-4 px-6">
            <%=job.user.service%>
          </td>
          <td class="py-4 px-6">
            <%=job.user.unit%>
          </td>
          <td class="py-4 px-6">
            <%=job.nature_of_request%>
          </td>
          <td class="py-4 px-6">
            <%=job.note_to_staff%>
          </td>
          <% if job.staff_id == nil %>
            <td class="py-4 px-6">
            </td>
          <% else %>
            <td class="py-4 px-6">
              <%=Personnel.all.find_by(id: job.staff_id).maintenance_unit%>
            </td>
          <% end %>
          <% if job.assessor_id == nil %>
            <td class="py-4 px-6">
            </td>
          <% else %>
            <td class="py-4 px-6">
              Engr. <%=Personnel.all.find_by(id: job.assessor_id).surname%>
            </td>
          <% end %>
          <% if job.staff_id == nil %>
            <td class="py-4 px-6">
            </td>
          <% else %>
            <td class="py-4 px-6">
              <%=Personnel.all.find_by(id: job.staff_id).surname%>, <%=Personnel.all.find_by(id: job.staff_id).name[0,1]%>
            </td>
          <% end %>
          <% if job.remark.last == nil %>
            <td class="py-4 px-6">
              Queue
            </td>
            <td class="py-4 px-6">
            </td>
            <td class="py-4 px-6">
              <%=job.created_at.localtime.strftime("%b %d, '%y")%> |
              <%=job.created_at.localtime.strftime('%H:%M')%>
            </td>
            <td class="py-4 px-6">
            </td>
          <%else%>
            <td class="py-4 px-6">
              <%=job.remark.last.status%>
            </td>
            <td class="py-4 px-6">
              <%=job.remark.last.remarks%>
            </td>
            <td class="py-4 px-6">
              <%=job.created_at.localtime.strftime("%b %d, '%y")%> |
              <%=job.created_at.localtime.strftime('%H:%M')%>
            </td>
            <td class="py-4 px-6">
              <% if job.remark.last.status == 'Done' || job.remark.last.status == 'Cancelled'%>
                <%=job.remark.last.created_at.localtime.strftime("%b %d, '%y")%> |
                <%=job.remark.last.created_at.strftime('%H:%M')%>
              <%end%>
            </td>
          <%end%>
          <td class="py-4 px-6">
            <%= link_to admin_job_path(job) do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
              </svg>
            <%end%>
          </td>
        </tr>
      <%end%>
    </tbody>
  </table>
</div>
