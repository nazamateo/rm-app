<div class="min-h-fit flex items-center justify-center px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <%=image_tag("engg_logo.jpg", class: 'mx-auto h-30 w-auto')%>
      <h2 class="mt-6 text-center text-3xl tracking-tight font-bold text-gray-900">Sign in to your account</h2>
    </div>
    <%= form_for(resource, as: resource_name, url: user_session_path) do |f| %>
      <div class="pt-5">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full px-4 py-2 border border-gray-300 rounded-lg', placeholder: 'Email' %>
      </div>
      <div class="py-5">
        <%= f.password_field :password, autocomplete: "current-password", class: 'w-full px-4 py-2 border border-gray-300 rounded-lg', placeholder: 'Password' %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="pb-5">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <div class="actions">
        <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-green-900 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
          <span class="absolute left-0 inset-y-0 flex items-center pl-3">
            <svg class="h-5 w-5 text-green-500 group-hover:text-green-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
            </svg>
          </span>
          <%= f.submit "Log in" %>
        </button>
      </div>
    <% end %>
  </div>
</div>
